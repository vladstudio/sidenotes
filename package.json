{
  "name": "vladstudio-sidenotes",
  "displayName": "Sidenotes",
  "description": "A simple VSCode extension to manage and view notes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:sidenotes-sidebar"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sidenotes.refreshSidebar",
        "title": "Sidenotes: Refresh Sidebar"
      },
      {
        "command": "sidenotes.createNewNote",
        "title": "Sidenotes: Create New Note",
        "icon": "$(add)"
      },
      {
        "command": "sidenotes.createNewFolder",
        "title": "Sidenotes: Create New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "sidenotes.deleteItem",
        "title": "Sidenotes: Delete Item",
        "icon": "$(trash)"
      },
      {
        "command": "sidenotes.renameItem",
        "title": "Sidenotes: Rename Item",
        "icon": "$(edit)"
      },
      {
        "command": "sidenotes.quickSearch",
        "title": "Sidenotes: Quick Search",
        "icon": "$(search)"
      }
    ],
    "keybindings": [
      {
        "command": "sidenotes.createNewNote",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidenotes-sidebar",
          "title": "Sidenotes",
          "icon": "resources/sidenotes-icon.svg"
        }
      ]
    },
    "views": {
      "sidenotes-sidebar": [
        {
          "id": "sidenotes-files",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "sidenotes.createNewNote",
          "when": "view == sidenotes-files",
          "group": "navigation"
        },
        {
          "command": "sidenotes.createNewFolder",
          "when": "view == sidenotes-files",
          "group": "navigation"
        },
        {
          "command": "sidenotes.quickSearch",
          "when": "view == sidenotes-files",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sidenotes.renameItem",
          "when": "view == sidenotes-files",
          "group": "inline@1"
        },
        {
          "command": "sidenotes.deleteItem",
          "when": "view == sidenotes-files",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
