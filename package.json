{
  "name": "vladstudio-sidenotes",
  "displayName": "Sidenotes",
  "description": "A simple VSCode extension to manage and view notes",
  "version": "0.0.1",
  "publisher": "Vladstudio",
  "icon": "resources/sidenotes-icon.png",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:sidenotes-sidebar"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Sidenotes",
      "properties": {
        "sidenotes.rootFolder": {
          "type": "string",
          "default": null,
          "description": "The root folder for storing notes. If not set, it defaults to '.sidenotes' in the user's home directory."
        },
        "sidenotes.showHiddenFiles": {
          "type": "boolean",
          "default": false,
          "description": "Show hidden files and folders."
        }
      }
    },
    "commands": [
      {
        "command": "sidenotes.refreshSidebar",
        "title": "Refresh Sidebar",
        "category": "Sidenotes"
      },
      {
        "command": "sidenotes.createNewNote",
        "title": "Create New Note",
        "category": "Sidenotes",
        "icon": "$(add)"
      },
      {
        "command": "sidenotes.createNewFolder",
        "title": "Create New Folder",
        "category": "Sidenotes",
        "icon": "$(new-folder)"
      },
      {
        "command": "sidenotes.deleteItem",
        "title": "Delete Item",
        "category": "Sidenotes",
        "icon": "$(trash)"
      },
      {
        "command": "sidenotes.renameItem",
        "title": "Rename Item",
        "category": "Sidenotes",
        "icon": "$(edit)"
      },
      {
        "command": "sidenotes.quickSearch",
        "title": "Quick Search",
        "category": "Sidenotes",
        "icon": "$(search)"
      },
      {
        "command": "sidenotes.openSettings",
        "title": "Open Sidenotes Settings",
        "category": "Sidenotes",
        "icon": "$(gear)"
      }
    ],
    "keybindings": [
      {
        "command": "sidenotes.createNewNote",
        "key": "ctrl+n",
        "mac": "cmd+n",
        "when": "sideBarVisible && activeViewlet == 'workbench.view.extension.sidenotes-sidebar'"
      },
      {
        "command": "sidenotes.createNewFolder",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "sideBarVisible && activeViewlet == 'workbench.view.extension.sidenotes-sidebar'"
      },
      {
        "command": "sidenotes.quickSearch",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "sideBarVisible && activeViewlet == 'workbench.view.extension.sidenotes-sidebar'"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidenotes-sidebar",
          "title": "Sidenotes",
          "icon": "resources/sidenotes-icon.svg"
        }
      ]
    },
    "views": {
      "sidenotes-sidebar": [
        {
          "id": "sidenotes-files",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "sidenotes.createNewNote",
          "when": "view == sidenotes-files",
          "group": "navigation"
        },
        {
          "command": "sidenotes.createNewFolder",
          "when": "view == sidenotes-files",
          "group": "navigation"
        },
        {
          "command": "sidenotes.quickSearch",
          "when": "view == sidenotes-files",
          "group": "navigation"
        },
        {
          "command": "sidenotes.openSettings",
          "when": "view == sidenotes-files",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sidenotes.renameItem",
          "when": "view == sidenotes-files",
          "group": "inline@1"
        },
        {
          "command": "sidenotes.deleteItem",
          "when": "view == sidenotes-files",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vladstudio/sidenotes.git"
  }
}
